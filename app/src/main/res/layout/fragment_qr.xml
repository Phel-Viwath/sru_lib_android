<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Card View -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSection"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blurCardSection"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <GridLayout
                            android:id="@+id/grid_layout"
                            android:rowCount="1"
                            android:columnCount="3"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardEntry"
                                style="?attr/materialCardViewOutlinedStyle"
                                android:layout_margin="5dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <eightbitlab.com.blurview.BlurView
                                    android:id="@+id/blurEntryCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:padding="18dp"
                                        android:id="@+id/linearEntry"
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:ignore="TooDeepLayout">
                                        <TextView
                                            android:id="@+id/tvEntry"
                                            android:text="@string/zero"
                                            android:textStyle="bold"
                                            android:textSize="34sp"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:ignore="TooDeepLayout" />
                                        <TextView
                                            android:text="@string/entry"
                                            android:layout_marginTop="10dp"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </eightbitlab.com.blurview.BlurView>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardExit"
                                style="?attr/materialCardViewOutlinedStyle"
                                android:layout_margin="5dp"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <eightbitlab.com.blurview.BlurView
                                    android:id="@+id/blurExitedCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/linearExit"
                                        android:padding="18dp"
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tvExit"
                                            android:text="@string/zero"
                                            android:textStyle="bold"
                                            android:textSize="34sp"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/exited"
                                            android:layout_marginTop="10dp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                    </LinearLayout>
                                </eightbitlab.com.blurview.BlurView>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardTotal"
                                style="?attr/materialCardViewOutlinedStyle"
                                android:layout_margin="5dp"
                                android:layout_row="0"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <eightbitlab.com.blurview.BlurView
                                    android:id="@+id/blurTotalCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/linearTotal"
                                        android:padding="18dp"
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tvTotal"
                                            android:text="@string/zero"
                                            android:textStyle="bold"
                                            android:textSize="34sp"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:text="@string/total"
                                            android:layout_marginTop="10dp"
                                            android:textColor="?android:attr/textColorPrimary"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </eightbitlab.com.blurview.BlurView>


                            </com.google.android.material.card.MaterialCardView>
                        </GridLayout>

                    </eightbitlab.com.blurview.BlurView>

                </com.google.android.material.card.MaterialCardView>

                <!-- Camera  -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCameraFrame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSection"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blurViewScanSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/relativeCamera"
                            android:padding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessParent">

                            <TextView
                                android:id="@+id/scan_here"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="8dp"
                                android:text="@string/scan_here"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="20sp" />
                            <FrameLayout
                                android:id="@+id/frame_camera"
                                android:layout_below="@+id/scan_here"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="200dp">
                                <androidx.camera.view.PreviewView
                                    android:id="@+id/cameraPreviewView"
                                    android:background="@drawable/frame_camera_bg_modern"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:id="@+id/tvClickScan"
                                    android:text="@string/tab_to_scan"
                                    android:textSize="28sp"
                                    android:fontFamily="monospace"
                                    android:gravity="center"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </FrameLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:gravity="center_horizontal"
                                android:layout_below="@id/frame_camera"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/flashlight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="@string/flashlight"
                                    android:padding="8dp"
                                    android:src="@drawable/ic_white_flash_off_36"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </RelativeLayout>
                    </eightbitlab.com.blurview.BlurView>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStudentSection"
                    app:strokeColor="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@+id/cardCameraFrame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blurViewStudentDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/linearStudentDetail"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:text="@string/student_id"
                                android:textSize="22sp"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/edtId"
                                android:autofillHints="name"
                                android:enabled="false"
                                android:textStyle="italic"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:inputType="text"
                                android:hint="@string/dash" />

                            <TextView
                                android:text="@string/student_name"
                                android:layout_marginTop="6dp"
                                android:textSize="22sp"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/edtStuName"
                                android:autofillHints="name"
                                android:enabled="false"
                                android:textStyle="italic"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:inputType="text"
                                android:hint="@string/dash" />

                            <TextView
                                android:text="@string/major"
                                android:layout_marginTop="6dp"
                                android:textSize="22sp"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/edtMajor"
                                android:autofillHints="name"
                                android:textStyle="italic"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:inputType="text"
                                android:hint="@string/dash" />

                            <TextView
                                android:text="@string/purpose"
                                android:layout_marginTop="6dp"
                                android:textSize="22sp"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <!--Radio Button -->
                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioUsePc"
                                android:checked="true"
                                android:text="@string/use_pc"
                                android:textSize="18sp"
                                android:buttonTint="?android:attr/textColorPrimary"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>
                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radioReadBook"
                                android:text="@string/reading"
                                android:textSize="18sp"
                                android:buttonTint="?android:attr/textColorPrimary"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>
                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radioAssignment"
                                android:text="@string/assignment"
                                android:textSize="18sp"
                                android:buttonTint="?android:attr/textColorPrimary"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>
                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radioOther"
                                android:text="@string/other"
                                android:textSize="18sp"
                                android:buttonTint="?android:attr/textColorPrimary"
                                android:textColor="?android:attr/textColorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>
                            <GridLayout
                                android:columnCount="2"
                                android:rowCount="1"
                                android:layout_gravity="center"
                                android:useDefaultMargins="true"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btOk"
                                    android:background="@drawable/night_button_bg"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="18sp"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:layout_columnWeight="1"
                                    android:layout_marginEnd="12dp"
                                    android:text="@string/ok"/>

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btCancel"
                                    android:background="@drawable/night_button_bg"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="18sp"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:layout_columnWeight="1"
                                    android:text="@string/cancel" />
                            </GridLayout>
                        </LinearLayout>
                    </eightbitlab.com.blurview.BlurView>
                </com.google.android.material.card.MaterialCardView>

                <View
                    app:layout_constraintTop_toBottomOf="@+id/cardStudentSection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@android:color/transparent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
