<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SRULibraryMobile" parent="Base.Theme.SRULibraryMobile">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="BoxBackgroundStyle" parent="Base.Theme.SRULibraryMobile">
        <item name="android:background">@drawable/light_box_bg</item>
    </style>

    <style name="layoutBackground" parent="Base.Theme.SRULibraryMobile">
        <item name="android:background">@color/light_background</item>
    </style>

</resources>